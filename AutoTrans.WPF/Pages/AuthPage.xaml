<Page x:Class="AutoTrans.WPF.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoTrans.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Аутентификация">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Vertical" Margin="5">
            <Label HorizontalAlignment="Left" Content="Логин"></Label>
            <TextBox x:Name="tbLogin"></TextBox>
            <Label HorizontalAlignment="Left" Content="Пароль"></Label>
            <PasswordBox x:Name="pbPassword"/>
            <Button x:Name="btnLogin" Content="Войти" Click="btnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
